<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.angusjlowe.studentstudyspaces.InfoWindow">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarInfoWindow"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/AppTheme"
            app:popupTheme="@style/toolBarStyle"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location Title"
            android:id="@+id/textViewLocationTitle"
            android:textSize="50dp"
            android:layout_below="@+id/toolbarInfoWindow"
            android:layout_alignStart="@+id/buttonSelectPhoto" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:id="@+id/textViewAverageRating"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/textViewLocationTitle"
            android:layout_toLeftOf="@+id/ratingBarAverageRating"
            android:layout_toStartOf="@+id/ratingBarAverageRating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textv"
            android:text="Your Rating"
            android:textSize="16dp"
            android:layout_below="@+id/textViewContribute"
            android:layout_alignLeft="@+id/textViewAverageRating"
            android:layout_alignStart="@+id/textViewAverageRating"
            android:layout_marginTop="40dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/textv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:id="@+id/buttonSeeAll"
            android:layout_gravity="center_horizontal"
            android:onClick="goToPhotos"
            android:layout_below="@+id/imageViewCurrentPhoto1"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/buttonsbm"
            android:layout_alignTop="@+id/ratingBar"
            android:layout_alignRight="@+id/textViewContribute"
            android:layout_alignEnd="@+id/textViewContribute" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Photo"
            android:id="@+id/buttonSelectPhoto"
            android:onClick="selectPhoto"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/ratingBar"
            android:layout_alignRight="@+id/buttonUploadPhoto"
            android:layout_alignEnd="@+id/buttonUploadPhoto" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarUpload"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_alignTop="@+id/buttonSelectPhoto"
            android:layout_toRightOf="@+id/switchCheckIn"
            android:layout_toEndOf="@+id/switchCheckIn" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Photo"
            android:id="@+id/buttonUploadPhoto"
            android:onClick="uploadPhoto"
            android:layout_below="@+id/buttonSelectPhoto"
            android:layout_alignLeft="@+id/textv"
            android:layout_alignStart="@+id/textv" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBarAverageRating"
            android:layout_below="@+id/textViewLocationTitle"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewCurrentPhoto2"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/ratingBarAverageRating"
            android:layout_alignStart="@+id/imageViewCurrentPhoto1" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewCurrentPhoto1"
            android:layout_below="@+id/imageViewCurrentPhoto2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contribute"
            android:id="@+id/textViewContribute"
            android:background="@color/accent_material_light"
            android:textAlignment="center"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:layout_alignLeft="@+id/ratingBar"
            android:layout_alignStart="@+id/ratingBar"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/gauge1" />

        <pl.pawelkleczkowski.customgauge.CustomGauge
            android:id="@+id/gauge1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/buttonGoToComments"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            gauge:endValue="800"
            gauge:pointEndColor="@color/colorPrimary"
            gauge:pointStartColor="@color/colorPrimaryDark"
            gauge:startAngel="135"
            gauge:startValue="200"
            gauge:strokeCap="ROUND"
            gauge:strokeColor="@color/grey_300"
            gauge:strokeWidth="10dp"
            gauge:sweepAngel="270" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check In "
            android:id="@+id/switchCheckIn"
            android:checked="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/buttonSelectPhoto"
            android:layout_toEndOf="@+id/buttonSelectPhoto"
            android:layout_below="@id/textViewContribute"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Occupancy"
            android:id="@+id/textViewOccupancy"
            android:layout_alignTop="@+id/gauge1"
            android:layout_toStartOf="@+id/gauge1"
            android:layout_marginTop="27dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:id="@+id/buttonGoToComments"
            android:layout_below="@+id/buttonSeeAll"
            android:layout_toEndOf="@+id/textViewOccupancy"
            android:onClick="goToComments"/>

    </RelativeLayout>
</ScrollView>