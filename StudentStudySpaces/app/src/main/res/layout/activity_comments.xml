<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.angusjlowe.studentstudyspaces.Comments">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarInfoWindow"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/toolBarStyle"
        app:titleTextColor="@android:color/white"
        app:subtitleTextColor="@android:color/white" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddComment"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/commentsView"
        android:layout_toStartOf="@+id/buttonSubmitComment" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentsView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editTextAddComment"
        android:layout_below="@+id/toolbarInfoWindow" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/buttonSubmitComment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="addComment"/>

</RelativeLayout>
